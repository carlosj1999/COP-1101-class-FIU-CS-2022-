    //Step - 5
    public static void printSingleInt(int numberToPrint){
        System.out.println("Running printSingleInt -> " + numberToPrint);
    }
    //Step - 6
    public static void multipleNumbersIntAndDouble(int firstNumber, double secondNumber){
        double result = firstNumber * secondNumber;
        System.out.println("Running multipleNumbersIntAndDouble -> " + firstNumber + ", " + secondNumber);
        System.out.println("\t firstNumber: \t\t" + firstNumber);
        System.out.println("\t secondNumber: \t\t" + secondNumber);
        System.out.println("\t result: \t\t\t" + result);

    }
    //Step - 7
    public static double addTwoNumbers(double aNumber, int otherNumber){
        return aNumber + otherNumber;
    }


